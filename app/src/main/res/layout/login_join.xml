<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/join_idtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="209dp"
        android:layout_marginBottom="15dp"
        android:text="아이디"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/join_passtext"
        app:layout_constraintEnd_toStartOf="@+id/join_editid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/join_passtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="15dp"
        android:text="비밀번호"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/join_re_passtext"
        app:layout_constraintEnd_toStartOf="@+id/join_editpass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/join_idtext" />

    <TextView
        android:id="@+id/join_re_passtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="339dp"
        android:text="비밀번호 확인"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/join_re_editpass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/join_passtext" />

    <EditText
        android:id="@+id/join_editid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="211dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toTopOf="@+id/join_editpass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/join_idtext"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/join_editpass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginEnd="31dp"
        android:layout_marginBottom="35dp"
        app:layout_constraintBottom_toTopOf="@+id/join_re_editpass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/join_passtext"
        app:layout_constraintTop_toBottomOf="@+id/join_editid" />

    <EditText
        android:id="@+id/join_re_editpass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginEnd="31dp"
        android:layout_marginBottom="75dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/join_re_passtext"
        app:layout_constraintTop_toBottomOf="@+id/join_editpass" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="216dp"
        android:text="회원가입하기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/join_re_editpass" />

</androidx.constraintlayout.widget.ConstraintLayout>