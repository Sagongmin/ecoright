<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/idtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="129dp"
        android:layout_marginBottom="16dp"
        android:text="아이디 "
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/passtext"
        app:layout_constraintEnd_toStartOf="@+id/editid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/passtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="83dp"
        android:text="비밀번호 "
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_login"
        app:layout_constraintEnd_toStartOf="@+id/editpass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idtext" />

    <EditText
        android:id="@+id/editid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="129dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/editpass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/idtext"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editpass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginEnd="53dp"
        android:layout_marginBottom="311dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_searchid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/passtext"
        app:layout_constraintTop_toBottomOf="@+id/editid" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="355dp"
        android:text="로그인"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passtext" />

    <Button
        android:id="@+id/btn_joinMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="81dp"
        android:text="회원가입"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_searchid"
        app:layout_constraintTop_toBottomOf="@+id/btn_searchid" />

    <Button
        android:id="@+id/btn_searchid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:text="아이디/비밀번호 찾기"
        app:layout_constraintBottom_toTopOf="@+id/btn_joinMember"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editpass" />


</androidx.constraintlayout.widget.ConstraintLayout>