<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/gas_vectorback"
        android:layout_width="11.3dp"
        android:layout_height="21.3dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        app:srcCompat="@drawable/vectorback"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:id="@+id/gas_return_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="돌아가기"
        android:textColor="#5B9DFF"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/gas_vectorback"
        app:layout_constraintTop_toTopOf="@id/gas_vectorback"
        app:layout_constraintBottom_toBottomOf="@id/gas_vectorback"/>

    <TextView
        android:id="@+id/gas_complete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="완료"
        android:textColor="#5B9DFF"
        android:layout_marginEnd="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/gas_vectorback"
        app:layout_constraintBottom_toBottomOf="@id/gas_vectorback"/>

    <FrameLayout
        android:id="@+id/gas_inputrectangle_1"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/rectangle_1"
        android:elevation="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- 여기에 각 View 요소와 그 위치를 지정하는 속성을 추가 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="45dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_weight="1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전기"
            android:textAppearance="@style/needtree"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가스"
            android:textAppearance="@style/needtree"
            android:layout_marginTop="55dp"
            android:layout_marginStart="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수도"
            android:textAppearance="@style/needtree"
            android:layout_marginTop="95dp"
            android:layout_marginStart="30dp"/>


    </FrameLayout>

    <FrameLayout
        android:id="@+id/gas_inputrectangle_2"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="208dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/rectangle_1"
        android:elevation="1dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:background="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:text="요금"
            android:textAppearance="@style/needtree" />

        <EditText
            android:id="@+id/gas_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="10dp"
            android:textSize="17dp"
            android:hint="둘 중 하나만 입력하세요"
            android:textDirection="rtl"
            android:backgroundTint="@color/gray"
            android:textAppearance="@style/needtree"
            android:textColorHint="#d0d0d0"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="270dp"
            android:layout_marginTop="20dp"
            android:text="원"
            android:textAppearance="@style/needtree"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="85dp"
            android:text="사용량"
            android:textAppearance="@style/needtree" />

        <EditText
            android:id="@+id/gas_useAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="75dp"
            android:textSize="17dp"
            android:hint="둘 중 하나만 입력하세요"
            android:textDirection="rtl"
            android:backgroundTint="@color/gray"
            android:textAppearance="@style/needtree"
            android:textColorHint="#d0d0d0"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="270dp"
            android:layout_marginTop="85dp"
            android:text="N㎥"
            android:textAppearance="@style/needtree"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/gas_cameravector"
            android:layout_width="32dp"
            android:layout_height="28dp"
            android:layout_marginStart="300dp"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="1"
            app:srcCompat="@drawable/cameravector" />


    </FrameLayout>

    <FrameLayout
        android:id="@+id/gas_inputrectangle_3"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="350dp"
        android:background="@drawable/rectangle_1"
        android:elevation="1dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/gas_indivisual_sum"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/rectangle_6"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginTop="70dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/indivisual_sumco2"
            android:textAppearance="@style/sumco2"
            android:textSize="20dp"
            android:layout_marginBottom="115dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginTop="140dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/outcomeco2"
            android:textAppearance="@style/needtree"
            android:layout_marginTop="70dp"
            android:layout_marginStart="60dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/needtree"
            android:textAppearance="@style/needtree"
            android:layout_marginTop="70dp"
            android:layout_marginStart="230dp"/>




        <View
            android:id="@+id/gas_rectangle_6"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/rectangle_6"
            android:layout_marginTop="150dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>


        <View
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="115dp"
            android:layout_marginBottom="160dp"
            android:background="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/sumco2"
            android:textAppearance="@style/sumco2"
            android:textSize="20dp"
            android:layout_marginTop="25dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginTop="210dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/outcomeco2"
            android:textAppearance="@style/needtree"
            android:layout_marginTop="220dp"
            android:layout_marginStart="60dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/needtree"
            android:textAppearance="@style/needtree"
            android:layout_marginTop="220dp"
            android:layout_marginStart="230dp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:background="#000000"
            android:layout_marginTop="150dp"
            android:layout_marginBottom="40dp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="230dp"
            android:layout_marginTop="105dp"
            android:text="0 개"
            android:textAppearance="@style/needtree"
            android:textColor="#d0d0d0"
            android:textSize="20sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="105dp"
            android:text="0 KG"
            android:textAppearance="@style/needtree"
            android:textColor="#d0d0d0"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 개"
            android:textAppearance="@style/needtree"
            android:layout_marginTop="255dp"
            android:layout_marginStart="230dp"
            android:textColor="#d0d0d0"
            android:textSize="20sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 KG"
            android:textAppearance="@style/needtree"
            android:layout_marginTop="255dp"
            android:layout_marginStart="60dp"
            android:textColor="#d0d0d0"

            />
    </FrameLayout>

    <ImageView
        android:id="@+id/menubar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="1"
        app:srcCompat="@drawable/_markbackground" />

    <ImageView
        android:id="@+id/homebutton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/menubar"
        app:srcCompat="@drawable/homebutton" />

    <ImageView
        android:id="@+id/co2button"
        android:layout_width="36dp"
        android:layout_height="52dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/homebutton"
        app:layout_constraintTop_toTopOf="@id/menubar"
        app:srcCompat="@drawable/baseline_co2_24" />

    <ImageView
        android:id="@+id/marketbutton"
        android:layout_width="36dp"
        android:layout_height="52dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/co2button"
        app:layout_constraintTop_toTopOf="@id/menubar"
        app:srcCompat="@drawable/market" />

    <ImageView
        android:id="@+id/optionbutton"
        android:layout_width="43dp"
        android:layout_height="50dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/marketbutton"
        app:layout_constraintTop_toTopOf="@id/menubar"
        app:srcCompat="@drawable/option" />



</androidx.constraintlayout.widget.ConstraintLayout>